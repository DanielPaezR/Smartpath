generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RealTimeTracking {
  id              Int      @id @default(autoincrement())
  userId          Int
  latitude        Float?
  longitude       Float?
  currentStoreId  Int?
  activityStatus  ActivityStatus @default(Traveling)
  currentTask     String?
  batteryLevel    Int      @default(100)
  lastUpdate      DateTime @default(now()) @updatedAt
  
  user            User     @relation(fields: [userId], references: [id])
  store           Store?   @relation(fields: [currentStoreId], references: [id])
  
  @@index([lastUpdate])
  @@index([userId, activityStatus])
}

model AdminNotification {
  id               Int       @id @default(autoincrement())
  userId           Int
  type             NotificationType
  title            String
  message          String
  relatedStoreId   Int?
  isRead           Boolean   @default(false)
  createdAt        DateTime  @default(now())
  
  user             User      @relation(fields: [userId], references: [id])
  store            Store?    @relation(fields: [relatedStoreId], references: [id])
  
  @@index([createdAt, isRead])
}

enum ActivityStatus {
  Traveling
  AtStore
  Break
  Offline
}

enum NotificationType {
  VisitStarted
  VisitCompleted
  TaskCompleted
  DelayAlert
  IssueReported
}